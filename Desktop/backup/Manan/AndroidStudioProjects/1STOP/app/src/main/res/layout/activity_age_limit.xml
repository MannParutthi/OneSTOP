<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_age_limit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appsplanet.onestop.AgeLimitActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txt_ageConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/txt_18authenticate_margin_bottom"
        android:text="@string/authenticate18"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdg_selectDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_ageConfirm"
        android:layout_below="@id/txt_ageConfirm">

        <RadioButton
            android:id="@+id/rdb_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:checked="true"
            android:button="@drawable/radiobtn_custom"
            android:text="@string/yes"
            android:padding="@dimen/radiobtn_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_small" />

        <RadioButton
            android:id="@+id/rdb_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobtn_custom"
            android:text="@string/no"
            android:padding="@dimen/radiobtn_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_small" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdg_selectDistance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:text="@string/next"
        android:textSize="@dimen/txt_size_small"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txt_size_extra_small"
        android:text="@string/copyrightStmt"
        android:textColor="@color/white" />

</RelativeLayout>
