<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
android:paddingTop="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
tools:context="com.appsplanet.onestop.SubcategoryFemaleActivity">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/txt_payToCreateNewGroup">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ll_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_relationship"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/relationship"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_noStringsAttached"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/noStringsAttached"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_businessProfessionals"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/businessProfessional"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_workoutBuddy"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/workoutBuddy"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_sugarDaddy"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/sugarDaddy"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_sugarMommy"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/sugarMommy"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkbox_MoreShemaleEtc"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/checkbox_custom"
                android:textSize="@dimen/checkbox_textsize"
                android:text="@string/moreShemaleEtc"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_createANewGroup"
                android:layout_marginTop="25dp"
                android:text="@string/createANewGroup"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/txt_createnewgroup_txtsize"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtxt_enterGroupName"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="gone"
                android:hint="@string/enterGroupName"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:backgroundTint="@color/white"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_createGroup"
                android:background="@drawable/button_rounded"
                android:text="@string/create"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_small"
                android:visibility="gone"
               android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_SUBMIT"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:background="@drawable/button_rounded"
                android:text="@string/submit"
                android:textSize="@dimen/txt_size_small"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_payToCreateNewGroup"
        android:text="@string/toCreateNewGroup24.99"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_hint"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom|center_horizontal"/>


</RelativeLayout>

