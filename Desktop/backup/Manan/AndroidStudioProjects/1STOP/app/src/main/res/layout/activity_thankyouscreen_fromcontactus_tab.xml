<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
android:padding="10dp"
tools:context="com.appsplanet.onestop.fragment.ThankyouscreenFromcontactusFragment">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/imgBtn_navigationDrawer"
    android:id="@+id/txt_thankyouMsg"
    android:textSize="@dimen/txt_size_hint"
    android:textAlignment="center"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:textColor="@color/white"
    android:text="@string/thanks_for_your_mail_name_admin_will_get_back_to_you_as_soon_as_possible"/>

<Button
    android:id="@+id/btn_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txt_thankyouMsg"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:textSize="@dimen/txt_size_small"
    android:background="@drawable/button_rounded"
    android:text="@string/home"
    android:textColor="@color/white" />


</RelativeLayout>
