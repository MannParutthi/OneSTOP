<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.appsplanet.onestop.RegisterActivity">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ll_padding"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/firstName"
                android:textSize="@dimen/txt_size_hint"
                android:textColor="@color/white"
                android:inputType="text"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_firstName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/lastName"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_lastName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/userName"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_userName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/password"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/confirmPassword"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_confirmPassword"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/emailId"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_emailId"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/phoneNo"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_phoneNumber"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/city"
                android:inputType="text"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_city"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:textSize="@dimen/txt_size_hint"
                android:hint="@string/country"
                android:inputType="text"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_Country"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:textSize="@dimen/txt_size_hint"
                android:hint="@string/address"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_address"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:textSize="@dimen/txt_size_hint"
                android:hint="@string/postalZipCode"
                android:textColor="@color/white"
                android:inputType="number"
                android:layout_marginTop="2dp"
                android:textColorHint="@color/white"
                android:id="@+id/edtxt_postalzipCode"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_calendar"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="@string/dob"
                    android:textSize="@dimen/txt_size_hint"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:id="@+id/edtxt_dob"
                    android:layout_weight="8"/>
                <ImageButton
                    android:layout_width="@dimen/imgbtn_calendar_heightwidth"
                    android:layout_height="@dimen/imgbtn_calendar_heightwidth"
                    android:id="@+id/imgBtn_calender"
                    android:backgroundTint="@color/black"
                    android:scaleType="fitCenter"
                    android:src="@drawable/calendar" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_selectedGender"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_hint"
                android:paddingRight="8dp"
                android:text="@string/selectGender"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_gender"
                android:foregroundTint="@color/white"
                android:background="@null"
                android:layout_weight="1"
                style="@style/spinnerTheme"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_selectedAmbassador"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_hint"
                android:paddingRight="8dp"
                android:text="@string/selectAmbassador"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_ambassador"
                android:foregroundTint="@color/white"
                android:background="@null"
                android:layout_weight="1"
                style="@style/spinnerTheme"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@drawable/custom_cursorcolor"
                android:hint="@string/hearAboutus"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/txt_size_hint"
                android:layout_marginTop="10dp"
                android:id="@+id/edtxt_howDidUHearAboutUs"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_SubmitRegisterNow"
                android:background="@drawable/button_rounded"
                android:text="@string/submit"
                android:textSize="@dimen/txt_size_small"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_copyright"
                android:text="@string/copyrightStmt"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_extra_small"
                android:layout_gravity="center_horizontal|bottom"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
