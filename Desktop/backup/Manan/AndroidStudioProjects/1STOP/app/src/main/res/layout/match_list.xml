<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/darkgrey"
    android:weightSum="2"
    android:padding="5dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_hint"
        android:id="@+id/txt_match"
        android:layout_weight="0.8"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imgbtn_online"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:background="@color/darkgrey"
            android:src="@drawable/greendot" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imgbtn_videocall"
            android:padding="10dp"
            android:src="@drawable/videoicon"
            android:background="@color/darkgrey"
            android:layout_alignParentRight="true"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imgbtn_chat"
            android:padding="10dp"
            android:src="@drawable/chaticon"
            android:layout_centerHorizontal="true"
            android:background="@color/darkgrey"
            android:layout_toLeftOf="@id/imgbtn_videocall"
            android:layout_toRightOf="@id/imgbtn_online"/>

    </RelativeLayout>

</LinearLayout>