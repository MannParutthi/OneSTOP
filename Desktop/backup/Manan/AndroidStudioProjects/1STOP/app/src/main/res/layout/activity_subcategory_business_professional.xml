<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_registration_screen_one"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="@color/black"
tools:context="com.appsplanet.onestop.SubcategoryBusinessProfessionalActivity">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ll_margin_top"
    android:layout_below="@id/layoutHeader"
    android:orientation="vertical"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="10dp"
    android:padding="@dimen/ll_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size"
        android:textColor="@color/white"
        android:text="@string/businessProfession"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursorcolor"
        android:hint="@string/speciality"
        android:textSize="@dimen/txt_size_hint"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:id="@+id/edtxt_Speciality"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursorcolor"
        android:hint="@string/career"
        android:textSize="@dimen/txt_size_hint"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:id="@+id/edtxt_Career"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursorcolor"
        android:hint="@string/occupation"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/txt_size_hint"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/edtxt_Occupation"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursorcolor"
        android:hint="@string/skills"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/txt_size_hint"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:id="@+id/edtxt_Skills"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/custom_cursorcolor"
        android:hint="@string/education"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/txt_size_hint"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/edtxt_Education"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_SubmitBusinessProfessionals"
        android:background="@drawable/button_rounded"
        android:text="@string/submit"
        android:textSize="@dimen/txt_size_small"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_copyright"
    android:text="@string/copyrightStmt"
    android:textColor="@color/white"
    android:textSize="@dimen/txt_size_extra_small"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"/>


</RelativeLayout>

